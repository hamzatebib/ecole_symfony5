                <td>{{ eleve.dateinscription ? eleve.dateinscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.imageeleve }}</td>
                <td>{{ eleve.NomPrenomMere }}</td>
                <td>
                    <a href="{{ path('eleve_show', {'id': eleve.id}) }}">show</a>
