{% extends 'base.html.twig' %}

{% block title %}Bulltein
{% endblock %}

{% block body %}
	<h1>Bulltein</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ bulltein.id }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ bulltein.date }}</td>
			</tr>
			<tr>
				<th>Semestre</th>
				<td>{{ bulltein.semestre }}</td>
			</tr>
			<tr>
				<th>Etudiant</th>
				<td>{{ bulltein.getEleveId() }}</td>
			</tr>
			<tr>
				<th>Classe</th>
				<td>{{ bulltein.getClasseId() }}</td>
			</tr>

		</tbody>
	</table>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>MATIERE</th>
				<th>COEFICIENT</th>
				<th>VALEUR</th>
				<th>Observations</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for note in notes %}
				<tr>
					<td>{{ note.id }}</td>
					<td>{{ note.getMatiereId() }}</td>
					<td>{{ note.coeficient }}</td>
					<td>{{ note.valeur }}</td>
					<td>{{ note.observations }}</td>
					<td>
						<a href="{{ path('note_show', {'id': note.id}) }}">show</a>
						<a href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
					</td>

				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('bulltein_index') }}">back to list</a>
	<br/>

	<a href="{{ path('bulltein_edit', {'id': bulltein.id}) }}">edit</a>

	{{ include('bulltein/_delete_form.html.twig') }}
{% endblock %}
