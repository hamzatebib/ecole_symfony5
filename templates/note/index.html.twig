{% extends 'base.html.twig' %}

{% block title %}Note index
{% endblock %}

{% block body %}
	<h1>Note index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Matiere</th>
				<th>Etudiant</th>
				<th>Coeficient</th>
				<th>Valeur</th>
				<th>Semestre</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for note in notes %}
				<tr>
					<td>{{ note.id }}</td>
					<td>{{ note.getMatiereID  }}</td>
					<td>{{ note.getEleveId }}</td>
					<td>{{ note.coeficient }}</td>
					<td>{{ note.valeur }}</td>
					<td>{{ note.semestre }}</td>
					<td>
						<a href="{{ path('note_show', {'id': note.id}) }}">show</a>
						<a href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
						{{ include('note/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('note_new') }}">Create new</a>
{% endblock %}
